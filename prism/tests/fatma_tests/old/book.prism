//a very simple mdp from the mausam book 



mdp 

module thing 

       s:[0..5] init 0; 

       [a00] s=0 -> (s'=2);
       [a01] s=0 -> (s'=1); 
       [a1] s=1 -> (s'=2); 
       [a21] s=2 -> (s'=1); 
       [a20] s=2 -> (s'=4); 
       [a40] s=4 -> (s'=5);
       [a41] s=4 -> 0.6:(s'=5) + 0.4:(s'=3); 
       [a3] s=3 -> (s'=4);
       [g] s=5 -> (s'=5);


endmodule

rewards "time"

	[a00] s=0:1.0; 
	[a01] s=0:1.0; 
	[a1] s=1:1.0; 
	[a21] s=2:1.0; 
	[a20] s=2:1.0; 
	[a40] s=4:5.0; 
	[a41] s=4:2.0;
	[a3]  s=3:1.0;
	[g] s=5:0.0;

endrewards

label "goal" = s=5;